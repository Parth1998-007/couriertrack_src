<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_action"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/icon_checkbox_filled" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layerType="software"
                android:src="@drawable/dotted_line" />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/icon_uncheckbox" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layerType="software"
                android:src="@drawable/dotted_line" />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/icon_uncheckbox" />

        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_action">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_margin="@dimen/medium"
                android:orientation="vertical">

                <TextView
                    style="@style/TextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/extra_30"
                    android:text="@string/lbl_reg_detail" />

                <LinearLayout
                    android:id="@+id/ll_profile_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_profilepic"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_default_profile" />

                    <TextView
                        style="@style/TextMediumlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Profile Picture" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/extra_30"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/icon_input_user" />

                    <EditText
                        android:id="@+id/etFirstname"
                        style="@style/LoginEditText"
                        android:layout_width="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="@string/hint_first_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/extra_30"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/icon_input_user" />

                    <EditText
                        android:id="@+id/etLastname"
                        style="@style/LoginEditText"
                        android:layout_width="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="@string/hint_last_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/extra_30"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/icon_email" />

                    <EditText
                        android:id="@+id/etemail"
                        style="@style/LoginEditText"
                        android:layout_width="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="@string/hint_email" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/extra_30"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/icon_password" />

                    <EditText
                        android:id="@+id/etPassword"
                        style="@style/LoginEditText"
                        android:layout_width="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/extra_30"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/icon_password" />

                    <EditText
                        android:id="@+id/etconfirmPassword"
                        style="@style/LoginEditText"
                        android:layout_width="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="@string/hint_confirm_password"
                        android:inputType="textPassword" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/extra_30"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbmale"
                            style="@style/TextRegular"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            android:text="Male" />

                        <RadioButton
                            android:id="@+id/rbfemale"
                            style="@style/TextRegular"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            android:text="Female" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginRight="@dimen/extra_30"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbtermsofuse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        android:checked="true"
                        android:text="I agree to" />

                    <TextView
                        android:id="@+id/tv_termspolicy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:textColor="@color/colorPrimary"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=" Terms&amp;Conditions"
                        android:textColor="@color/colorAccent"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=" And "
                        android:textColor="@color/colorText"
                        android:visibility="visible" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginRight="@dimen/extra_30"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Privacy-Policy"
                        android:layout_marginLeft="@dimen/extra_30"
                        android:textColor="@color/colorAccent"
                        android:visibility="visible" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnregister"
                    style="@style/TextHeading"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/extra_30"
                    android:background="@drawable/login_button_bg"
                    android:text="REGISTER"
                    android:textColor="@color/white" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>

</layout>
