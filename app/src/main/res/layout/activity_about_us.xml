<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.home.support.AboutUs">

    <include layout="@layout/simple_toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/iv_title"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/app_icon"
                android:layout_marginBottom="@dimen/_10sdp"
                app:siRadius="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passonn Services Private Limited,"
                style="@style/TextHeading"
                android:textSize="@dimen/_14ssp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:text="Flat No. 5, Ganesh Apartment,"
                style="@style/TextRegular"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:text="Abhaynagar, Sangli (MH) â€“ 416416"
                style="@style/TextRegular"
                />

            <TextView
                android:id="@+id/tv_website"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="www.passonn.com"
                style="@style/TextRegular" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
</layout>