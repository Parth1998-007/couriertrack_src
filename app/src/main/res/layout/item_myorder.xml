<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llmyOrder"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:layout_margin="@dimen/medium"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeadingLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORDER ID" />

            <TextView
                android:id="@+id/tv_orderid"
                style="@style/TextHeadingMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                style="@style/TextHeadingLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATUS" />

            <TextView
                android:id="@+id/tv_orderstatus"
                style="@style/TextHeadingMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium"
                />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/small"
        android:background="@drawable/bg_white"
        android:orientation="horizontal"
        android:padding="@dimen/small">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/icon_map_sender" />

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layerType="software"
                android:src="@drawable/dotted_line_vertical" />


            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/icon_map_receiver" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextHeadingLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PickUp Location" />

                <TextView
                    android:id="@+id/tv_pickup"
                    style="@style/TextHeadingMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorBackgroundGray"
                android:layout_marginLeft="@dimen/medium"
                android:layout_marginRight="@dimen/medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextHeadingLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drop Location" />

                <TextView
                    android:id="@+id/tv_drop"
                    style="@style/TextHeadingMedium"
                    android:layout_width="wrap_content"
                    android:maxLines="2"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
</layout>