<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="3"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/app_icon_round" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_customer"
                        style="@style/TextHeading"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/hint_customer"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/colorBackgroundGray" />

                    <TextView
                        android:id="@+id/tv_courier"
                        style="@style/TextHeading"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Delivery Partner"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextLight" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="@dimen/medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginRight="@dimen/extra_30"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/icon_input_number"/>

                    <EditText
                        android:id="@+id/etPhone"
                        style="@style/LoginEditText"
                        android:layout_width="match_parent"
                        android:hint="@string/hint_mobile"
                        android:background="@android:color/transparent"
                        android:inputType="phone"
                        android:maxLength="10" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginRight="@dimen/extra_30"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/icon_password"/>

                <EditText
                    android:id="@+id/etPassword"
                    style="@style/LoginEditText"
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_forgotpassword"
                    style="@style/TextHeadingLight"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginRight="@dimen/extra_30"
                    android:layout_marginTop="@dimen/small"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/forgot_pass" />


                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/btnLogin"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/extra_30"
                    android:layout_marginLeft="@dimen/extra_30"
                    android:layout_marginRight="@dimen/extra_30"
                    android:text="LOGIN"
                    style="@style/TextHeading"
                    android:textColor="@color/white"
                    android:background="@drawable/login_button_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/extra_30"

                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="0.0"
                    >

                    <TextView
                        style="@style/TextRegularLight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_account"
                        android:textSize="@dimen/_13sdp"/>

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:background="@color/colorBackgroundGray"
                    android:layout_marginLeft="@dimen/medium"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="1.0">

                    <TextView
                        android:id="@+id/tv_signup"
                        style="@style/TextRegularLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signup_customer"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_13sdp"
                        />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</layout>
