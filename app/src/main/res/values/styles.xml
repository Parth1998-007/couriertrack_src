<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorButtonNormal">@color/colorButtonBg</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/colorButtonBg
        </item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="DialogTitleText">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="TextRegular">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>

    <style name="TextHeading">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="TextHeadingLight">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>

    <style name="TextHeadingMedium">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/medium_font</item>
    </style>

    <style name="TextRegularLight">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>

    <style name="TextToolBar">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:fontFamily">@font/medium_font</item>
    </style>

    <style name="LoginEditText">
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>

    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/regular_font</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
    </style>

    <style name="SearchEditText">
        <item name="android:minHeight">@dimen/_30sdp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/medium_font</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/medium_font</item>
    </style>

    <style name="Textbold">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>


    <style name="TextAppName">
        <item name="android:textSize">@dimen/_30ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="TextMediumlight">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:fontFamily">@font/medium_font</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:background">@drawable/login_button_bg</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OrderStatus">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:background">@drawable/order_status_bg</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
